#!/usr/bin/env ruby
require "blackjack1"
Hand.deck = CardDeck::Deck.new
dealer, player, view = Hand.new, Hand.new, proc do |player|
	puts "You have: #{player.view}"
	sleep 0.5
	puts "Value: #{player.value}"
	sleep 1
end
view.call player
unless player.blackjack?
	puts "The dealer is showing #{dealer.cards[1]}\n"
	sleep 2
	print "Hit or stay? "
	action = gets.chomp.downcase
	while action == "hit" && player.value <= 21
		sleep(0.5)
		player.hit
		view.call player
		print "Hit or stay? "
		action = gets.chomp.downcase
		sleep(0.5)
	end
	unless player.bust?
		puts "You finished with #{player.value}"
	else
		puts "You busted!"
	end
	sleep 0.5
	if dealer.blackjack?
		puts "Dealer got blackjack"
		sleep 0.5
		puts "Dealer wins"
		sleep 2
		exit
	end
	while dealer.value =< Hand::MDHV; end
else
	puts "You got blackjack!"
	sleep 1
	puts "You win!"
	sleep 0.5
end
